				<field name="sh_editprofile"  type="list" default="1" label="PLG_COMMUNITY_KUNENAMENU_PARAM_SHOW_EDITPROFILE" description="PLG_COMMUNITY_KUNENAMENU_PARAM_SHOW_EDITPROFILE_DESC">
