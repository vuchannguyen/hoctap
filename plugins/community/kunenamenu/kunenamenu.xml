			<option value="1">PLG_COMMUNITY_KUNENAMENU_OPTION_YES</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">	
				<field name="coreapp" type="list" default="0" description="PLG_COMMUNITY_KUNENAMENU_PARAM_COREAPP_DESC" label="PLG_COMMUNITY_KUNENAMENU_PARAM_COREAPP">
					<option value="0">PLG_COMMUNITY_KUNENAMENU_OPTION_NO</option>
					<option value="1">PLG_COMMUNITY_KUNENAMENU_OPTION_YES</option>
