			<option value="1">PLG_COMMUNITY_KUNENAMENU_OPTION_YES</option>
		</param>
		<param name="sh_myposts" type="list" default="1" label="PLG_COMMUNITY_KUNENAMENU_PARAM_SHOW_MYPOSTS" description="PLG_COMMUNITY_KUNENAMENU_PARAM_SHOW_MYPOSTS_DESC">
